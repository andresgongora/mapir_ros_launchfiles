<!-- 
  This launch file display an interface to control a based mobile robot with the keyboard
--> 

<launch>
  <node pkg="keyboard_control" type="keyboard_control" name="keyboard_control" output="screen" launch-prefix="xterm -e">
    <!-- Set velocities -->
    <param name="linear_v" type="double" value="0.05" />  <!-- m/s -->
    <param name="angular_v" type="double" value="0.5" /> <!-- rad/s -->
    <!-- set topic name to publish -->
    <param name="publish_topic" type="str" value="cmd_vel" />
  </node>
</launch>
